# Telegram Bot Token (required)
# Get from @BotFather: https://t.me/botfather
TELEGRAM_BOT_TOKEN=your_token_here

# Database URL (default: SQLite)
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/habitmax
DATABASE_URL=sqlite+aiosqlite:///habitmax.db

# OCR.Space API Key (for receipt processing)
# Get free key: https://ocr.space/ocrapi
OCR_SPACE_API_KEY=your_key_here

# Scheduler settings
REMINDER_CHECK_INTERVAL=60
FINANCE_REMINDER_HOUR=9
FINANCE_REMINDER_MINUTE=0

# AI Settings (optional)
AI_ENABLED=false
OPENAI_API_KEY=your_openai_key_here

# Cache settings
CACHE_TTL=300
HABITS_CACHE_SIZE=1000

# Logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
